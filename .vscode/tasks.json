{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                //"'./.vscode/compile_flags.txt'", // `'` for Powershell
                "./src/main.c",
				//"-std=gnu2y",
				"-std=c18",
				"-g",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
        },
    ],
    "version": "2.0.0",
}